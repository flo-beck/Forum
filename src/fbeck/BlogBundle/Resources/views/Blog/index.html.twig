{# src/fbeck/BlogBundle/Resources/views/Blog/index.html.twig #}

{% extends "fbeckBlogBundle::layout.html.twig" %}

{% block title %}
  {{ 'blog.home'|trans }} - {{ parent() }}
{% endblock %}

{% block fbeck_blog_body %}

  <h2>{{ 'blog.list.title'|trans }}</h2>

  <ul>
    {% for article in articles %}
      <li>
        <a href="{{ path('fbeck_blog_view', {'id': article.id}) }}">{{ article.titre }}</a>
        {{ 'blog.list.by'|trans }} {{ article.auteur }},
        {{ 'blog.list.the'|trans }} {{ article.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>{{ 'blog.list.none'|trans }}</li>
    {% endfor %}
  </ul>

{% endblock %}