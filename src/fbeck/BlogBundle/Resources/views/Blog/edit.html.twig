{# src/fbeck/BlogBundle/Resources/views/Blog/modifier.html.twig #}

{% extends "fbeckBlogBundle::layout.html.twig" %}

{% block title %}
  {{ 'blog.edit.title'|trans }} - {{ parent() }}
{% endblock %}

{% block fbeck_blog_body %}

  <h2>{{ 'blog.edit.title'|trans }}</h2>

  {% include "fbeckBlogBundle:Blog:form.html.twig" %}

  <p>
    {{ 'blog.edit.msg'|trans }}
  </p>

  <p>
    <a href="{{ path('fbeck_blog_view', {'id': article.id}) }}" class="btn">
      <i class="icon-chevron-left"></i>
      {{ 'blog.edit.back'|trans }}
    </a>
  </p>

{% endblock %}